  insteadOf = gs:

# Delta Diff Pager config
# see https://github.com/dandavison/delta
[include]
  path = ./delta-themes
[core]
 pager = delta --line-numbers
# [pager] # Disable delta pager for log and status
#  status = less
#  log = less
[interactive]
 diffFilter = delta --color-only
[merge]
  conflictstyle = diff3
[diff]
 colorMoved = default
[delta]
 # Set by $BAT_THEME
 #theme = 'Monokai Extended'
 # More config could go here
 navigate = true
 # Use a "theme" from included file
 features = villsau decorations
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = master
