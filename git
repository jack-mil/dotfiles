[alias]
  lol = log --graph --oneline --decorate --all
  l1 = log --pretty=format:'%C(green)%ad%Creset %C(cyan)- %G? - %Creset%<(50,trunc)%s %C(magenta)%h' --date=short
  l2 = log --pretty=format:'%C(magenta)%h%Creset %C(bold blue)<%an> %C(cyan)-%C(auto)%d%Creset %s %C(green)(%ar) %Creset' --abbrev-commit --date=relative
  last = log -1 HEAD --format=medium
  unstage = reset HEAD --
  s = status
  cm = commit
  br = branch
  co = checkout
  sw = switch
  oops = "!f(){ \
    if [ \"$1\" == '' ]; then \
        git commit --amend --no-edit; \
    else \
        git commit --amend \"$@\"; \
    fi;\
  }; f"
[color]
  ui = true
[log]
  abbrevCommit = true
  decorate = auto
# [user]
  # Set in seperate ./user file
[include]
  path = ./user

# URL Shortcuts
[url "https:github.com/"]
  insteadOf = gh:

[url "git@github.com:"]
  insteadOf = gs:

[core]
  editor = nvim -f
  symlinks = true
  untrackedCache = true
  pager = delta
  eol = lf
  autocrlf = false
[pager]       # Disable delta pager for log and status
  status = less
  log = less
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  line-numbers = true
  side-by-side = true
[merge]
  conflictstyle = diff3
[pull]
  rebase = true
[diff]
  colorMoved = default
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[rerere]
  enabled = true
