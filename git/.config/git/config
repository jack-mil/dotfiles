[alias]
  lol = log --graph --oneline --decorate --all
  l = log --pretty=format:'%C(magenta)%h%Creset %C(bold blue)<%an> %C(cyan)-%C(auto)%d%Creset %s %C(green)(%ar) %Creset' --abbrev-commit --date=relative
  l2 = log --pretty=format:'%C(green)%ad%Creset %C(cyan)- %Creset%<(50,trunc)%s %C(magenta)%h' --date=short
  last = log -1 HEAD --format=medium
  unstage = reset HEAD --
  s = status
  cm = commit
  amend = commit --amend
  br = branch
  co = checkout
[color]
  branch = auto
  diff = auto
  status = auto
  ui = true
[log]
  abbrevCommit = true
  decorate = auto
[credential]
  helper = cache --timeout=86400
[user]
  # Set in seperate ./user file
[include]
  path = ./user


# Delta Diff Pager config
# see https://github.com/dandavison/delta
[core]
  pager = delta --line-numbers
[pager] # Disable delta pager for log and status
  status = less
  log = less
[interactive]
  diffFilter = delta --color-only
[delta]
  # Set by $BAT_THEME
  #theme = 'Monokai Extended'
  # More config could go here
  features = decorations
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
