# vim: ft=gitconfig

[user]
  {{#if (and email username)}}
  email = {{email}}
  name = {{username}}
  {{else}}
  useConfigOnly = true
  {{/if}}
  {{#if signing_key}}
  signingkey = "{{signing_key}}"
  {{#if (eq (extension signing_key) "pub")}}

[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = "~/.ssh/allowed_signers"
  {{/if}}

[commit]
  gpgsign = true
  {{/if}}

[core]
  editor = nvim -f
  untrackedCache = true
  {{#if (is_executable "delta")}}
  pager = delta
  {{/if}}
  {{#if (eq dotter.os "windows")}}
  symlinks = true
  sshcommand = "C:/Windows/System32/OpenSSH/ssh.exe"
  longpaths = true
  {{/if}}
  autocrlf = input

[init]
  defaultBranch = master

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all # show individual untracked, not folders

[merge]
  conflictstyle = diff3

[pull]
  # rebase = true # too dangerous? just use --rebase flag

[diff]
  colorMoved = default

[rerere]
  enabled = true # https://git-scm.com/book/en/v2/Git-Tools-Rerere

[log]
  abbrevCommit = true
  graphColors = blue,yellow,cyan,magenta,green,red
  decorate = auto

[column]
  status = auto

[pager]
  # Disable delta pager for log and status

[alias]
  lol = log --graph --oneline --decorate --all
  lt = "log --all --graph --pretty=format:'%C(yellow)%h %C(brightyellow) %an %C(brightgreen) %ah%C(auto) %D%n%s%n'"
  l1 = log --pretty=format:'%C(green)%ad%Creset %C(cyan)- %G? - %Creset%<(50,trunc)%s %C(magenta)%h' --date=short
  l2 = log --pretty=format:'%C(magenta)%h%Creset %C(bold blue)<%an> %C(cyan)-%C(auto)%d%Creset %s %C(green)(%ar) %Creset' --abbrev-commit --date=relative
  last = log -1 HEAD --format=medium
  unstage = reset HEAD --
  s = status
  cm = commit
  br = branch
  co = checkout
  sw = switch
  oops = "!f(){ if [ $# -eq 0 ]; then \
        git commit --amend --no-edit; else \
        git commit --amend \"$@\"; fi; }; f"
  # Use fzf for a fancy fixup picker, used with git rebase -i --autosquash 
  fixup = "!git log -n 15 --pretty=oneline --no-merges --color=always \
          | fzf --accept-nth 1 --no-multi --ansi \
          | xargs --open-tty -I% git commit --fixup=amend:%"
    

# URL Shortcuts
[url "https:github.com/"]
  insteadOf = "gh:"

[url "git@github.com:"]
  insteadOf = "gs:"

{{#if (is_executable "delta")}}

[interactive]
  diffFilter = delta --color-only

# include custom git-delta color theme
[include]
  path = catppuccin.gitconfig

[delta]
  features = my-catppuccin
  true-color = always
  navigate = true
  line-numbers = true
  side-by-side = false
{{/if}}
{{#if (is_executable "interactive-rebase-tool")}}

[sequence]
  editor = interactive-rebase-tool
{{/if}}

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
